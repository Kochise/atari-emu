#version 300 es

layout(std140) uniform UBO
{
    mat4 mMVP;
} sUBOConstants;

struct PushVarsVS
{
    vec4 sRatiosAndScales;
};

uniform PushVarsVS pushvars;

out vec2 ilUV;
layout(location = 1) in vec2 inVertexUV;
layout(location = 0) in vec4 inVertexPos;

void main()
{
    ilUV = (inVertexUV * pushvars.sRatiosAndScales.zw) + ((vec2(1.0) - pushvars.sRatiosAndScales.zw) * 0.5);
    gl_Position = sUBOConstants.mMVP * inVertexPos;
}

